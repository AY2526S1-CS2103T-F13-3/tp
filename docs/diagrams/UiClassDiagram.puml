@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>> {
    Class "<<interface>>\nUi" as Ui
    Class "{abstract}\nUiPart" as UiPart
    Class UiManager
    Class MainWindow
    Class HelpWindow
    Class ResultDisplay
    Class AthleteListPanel
    Class AthleteCard
    Class OrganizationListPanel
    Class OrganizationCard
    Class ContractListPanel
    Class ContractCard
    Class StatusBarFooter
    Class CommandBox
}

package Model <<Rectangle>> {
    Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
    Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> "1" MainWindow
MainWindow *-down-> "1" CommandBox
MainWindow *-down-> "1" ResultDisplay
MainWindow *-down-> "1" AthleteListPanel
MainWindow *-down-> "1" OrganizationListPanel
MainWindow *-down-> "1" ContractListPanel
MainWindow *-down-> "1" StatusBarFooter
MainWindow --> "0..1" HelpWindow

AthleteListPanel -down-> "*" AthleteCard
OrganizationListPanel -down-> "*" OrganizationCard
ContractListPanel -down-> "*" ContractCard

MainWindow -left-|> UiPart

ResultDisplay --|> UiPart
CommandBox --|> UiPart
AthleteListPanel --|> UiPart
AthleteCard --|> UiPart
OrganizationListPanel --|> UiPart
OrganizationCard --|> UiPart
ContractListPanel --|> UiPart
ContractCard --|> UiPart
StatusBarFooter --|> UiPart
HelpWindow --|> UiPart

AthleteCard ..> Model
OrganizationCard ..> Model
ContractCard ..> Model

UiManager -right-> Logic
MainWindow -left-> Logic

AthleteListPanel -[hidden]left- HelpWindow
OrganizationListPanel -[hidden]left- HelpWindow
ContractListPanel -[hidden]left- HelpWindow

HelpWindow -[hidden]left- CommandBox
CommandBox -[hidden]left- ResultDisplay
ResultDisplay -[hidden]left- StatusBarFooter

MainWindow -[hidden]-|> UiPart
@enduml
