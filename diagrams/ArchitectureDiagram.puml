@startuml
!include <office/Concepts/globe_internet>
!include <office/Concepts/documents>
!include <office/Users/user>
!include style.puml

Package " "<<Rectangle>>{
    Class UI UI_COLOR
    Class Logic LOGIC_COLOR
    Class Storage STORAGE_COLOR
    Class Model MODEL_COLOR
    Class Main #grey
    Class Commons LOGIC_COLOR_T2
}

Class "<$user>" as Agent MODEL_COLOR_T2
Class "<$documents>" as DataFile UI_COLOR_T1

' Relationships between main architecture components
UI -[#green]> Logic : Executes Commands
UI -right[#green]-> Model : Observes Data
Logic -[#blue]-> Storage : Reads/Writes Data
Logic -down[#blue]-> Model : Updates Model
Main -[#grey]-> UI : Initializes
Main -[#grey]-> Logic : Initializes
Main -[#grey]-> Storage : Initializes
Main -up[#grey]-> Model : Initializes
Main -down[hidden]-> Commons

Storage -up[STORAGE_COLOR].> Model : Saves/Loads Data
Storage .right[STORAGE_COLOR].> DataFile : JSON Files
Agent ..> UI : Interacts With

note right of Agent : Sports agents manage\nmultiple athletes
note left of DataFile : Stores all athlete,\norganization, and\ncontract data
Agent -[#purple]-> UI : User Input
UI -[#orange]-> Agent : Feedback

@enduml
