<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>

<HBox id="cardPane" fx:id="cardPane" alignment="TOP_LEFT" minHeight="160" prefHeight="160"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS" alignment="TOP_LEFT">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="TOP_LEFT" minHeight="140" prefHeight="160" GridPane.columnIndex="0" spacing="6">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>

      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="athleteInfo" text="\$athleteInfo" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="amountTag" hgap="6" vgap="6" alignment="CENTER_LEFT" />

      <Label fx:id="organizationInfo" styleClass="cell_small_label" text="\$organizationInfo" />
      <Label fx:id="duration" styleClass="cell_small_label" text="\$duration" />

      <!-- Replaced plain label with FlowPane for tag -->
    </VBox>
  </GridPane>
</HBox>
